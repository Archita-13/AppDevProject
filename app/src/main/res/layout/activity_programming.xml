<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdprog"
    tools:context=".ProgrammingActivity">

    <TextView
        android:id="@+id/question_prog"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="#EEF1F0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <RadioGroup
        android:id="@+id/radioGroup_prog"
        android:layout_width="321dp"
        android:layout_height="336dp"
        android:layout_margin="20px"
        android:padding="23px"
        android:textColor="#013220"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617">
    <RadioButton
        android:id="@+id/option1_prog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23px"
        android:text="RadioButton"
        android:textColor="#EEF1F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/option2_prog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23px"
        android:text="RadioButton"
        android:textColor="#EEF1F0"
        android:textSize="20sp"
        android:textStyle="bold" />
        <RadioButton
            android:id="@+id/option3_prog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23px"
            android:text="RadioButton"
            android:textColor="#EEF1F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/option4_prog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23px"
            android:text="RadioButton"
            android:textColor="#EEF1F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RadioGroup>

    <Button
        android:id="@+id/confirm_prog"
        android:layout_width="166dp"
        android:layout_height="56dp"
        android:text="Confirm"
        android:textColor="#010E57"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#118BEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>